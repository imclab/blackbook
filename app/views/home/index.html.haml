
#home
  #tags{:style => 'display: none;'}
    - if @tags.blank?
      %h2.error No tags yet!
    - else
      %h3
        / == Last #{pluralize @tags.length, 'tag'},
        %span{:style => 'font-weight: normal'}== #{pluralize Tag.count(:conditions => "created_at >= '#{1.day.ago}'"), 'tag'} uploaded today
        %span{:style => 'font-weight: normal'}== &ndash; #{link_to 'view all', tags_path, :style => 'text-decoration: underline;'}

  %br.clear
  / .right_column{:style => 'width: 280px; text-align: left; margin-top: 40px;'}
  -# TODO: convert this to a table
  .right_column{:style => "margin-top: 40px;"}
    %ul#frontpage_tags
      - @tags.each do |tag|
        %li
          %a{:href => tag_path(tag)}= tag_title(tag)
          %small
            - unless tag.application.blank? && tag.gml_application.blank?
              %span.application== <em>|</em> #{tag.application || tag.gml_application}          
            - unless tag.location.blank?
              %span.location== <em>|</em> #{tag.location}
            / %br
            - unless tag.user.nil?
              %span.username== <em>|</em> #{link_to tag.user.login, user_path(tag.user)} | 
            - unless tag.user_secret_name.blank?
              %span.uniquekey== <em>|</em> #{tag.user_secret_name}
            %span.created_at.timeago== <em>|</em> #{tag.created_at.strftime('%D')}
    %p.right
      %strong= link_to '<span>View all &raquo;</span>', tags_path, :class => 'button ghost small'

  #vanderplayer.left_column
    %h2
      %a{:href => tag_path(@tag)}= tag_title(@tag)
      %small
        - unless @tag.application.blank?
          %span.application== &ndash; #{@tag.application}          
        - unless @tag.location.blank?
          %span.location== &ndash; #{@tag.location}
        - unless @tag.user.nil?
          %span.username== &ndash; #{link_to @tag.user.login, user_path(@tag.user)}            
        %span.created_at.timeago== &ndash; #{@tag.created_at.strftime('%D')}
      
    = tag_player(@tag, :width => '580px')
    