
- uberform_for @user, :url => user_path, :html => { :multipart => true } do |form|
  %h2 Edit My Account

  %fieldset
    = form.error_messages
    %legend  
    %hr
    .floatRight= image_tag(@user.photo.url(:small))
    = form.file_field :photo, :size => 10

    %hr
    - if is_admin?
      = form.text_field :login, :disabled => true
      = form.text_field :slug, :disabled => true
    = form.text_field :email
    = form.text_field :location
  
    %hr   
    = form.text_field :website
    = form.text_field :tagline  
    = form.text_area :about, :rows => 8
  
  
    .buttons
      = form.submit "Update"
