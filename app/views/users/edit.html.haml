
- uberform_for @user, :url => user_path(@user), :html => { :multipart => true } do |form|
  %h2 My Settings

  %fieldset
    = form.error_messages
    %legend  
    .right= image_tag(@user.photo.url(:small))
    %hr
    = form.file_field :photo, :size => 10

    %hr
    - if false && is_admin?
      = form.text_field :login, :disabled => true
      = form.text_field :slug, :disabled => true
    = form.text_field :email
    = form.text_field :location
  
    %hr   
    = form.text_field :website
    = form.text_field :tagline  
    = form.text_area :about, :rows => 8
    
    %hr
    = form.text_field :iphone_uniquekey, :size => 50, :label => 'iPhone key/unique ID (for claiming your uploads; to be fully implemented shortly)'
  
    
    %p.buttons
      = form.submit "Update"
