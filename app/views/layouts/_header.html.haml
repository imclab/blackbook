%body 

  #header
    %ul.navigation.user_navigation
      = yield :header_nav
    %ul.navigation.buttons{:style => 'margin-left: -50px'}
      / %li= link_to 'home', root_path
      %li= link_to 'data', tags_path
      %li= link_to 'applications', visualizations_path
      %li= link_to 'API/docs', "http://jamiedubs.com/wikis/blackbook"
      / %li= link_to 'dev forum', forums_path
      %li= link_to 'activity', activity_path
    
    %a.root_link{:href => root_path}
      %h1.title= SiteConfig.site_name
      %h2.byline= SiteConfig.site_byline
      
  #container
    #content
      = flash_messages
      = yield :layout
  = render :partial => 'layouts/footer'
